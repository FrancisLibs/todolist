{% extends 'base.html.twig' %}

{% block header_title %}
    <h1 class="pt_format">Bienvenue sur Todo List</h1>
    <h1 class="gd_format">Bienvenue sur Todo List, l'application vous permettant de gérer l'ensemble de vos tâches sans effort !</h1>
{% endblock %}

{% block body %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="row justify-content-center">
            <a href="{{ path('task_create') }}" class="col-8 col-sm-3 col-md-3 btn btn-success mb-2 me-2">Créer une nouvelle tâche</a>
            <a href="{{ path('task_list',{ 'done': 0}) }}" class="col-8 col-sm-3 col-md-3 btn btn-info mb-2 me-2">Consulter la liste des tâches à faire</a>
            <a href="{{ path('task_list',{ 'done': 1}) }}" class="col-8 col-sm-3 col-md-3 btn btn-warning mb-2 me-2">Consulter la liste des tâches terminées</a>
        </div
    {% endif %}
{% endblock %}
