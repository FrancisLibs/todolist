{% extends 'base.html.twig' %}

{% block header_title %}
    <h1>Modifier <strong>{{ user.username }}</strong></h1>
{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
    <div class="row">
        {{ form_start(form, {'action' : path('user_edit', {'id' : user.id})}) }}
            <div class="row">
                <div class="col-md-12">{{ form_row(form.username) }}</div>
            </div>

            {{ form_widget(form) }}

            <button type="submit" class="btn btn-success btn-sm pull-right">Modifier</button>
            <button class="btn btn-danger btn-sm pull-right">Supprimer</button>
            <button class="btn btn-primary btn-sm pull-right">Upgrade</button>

        {{ form_end(form) }}
        
    </div>
{% endblock %}
