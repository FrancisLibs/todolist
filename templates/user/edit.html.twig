{% extends 'base.html.twig' %}

{% block header_title %}
    <h1>Modifier <strong>{{ user.username }}</strong></h1>
{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
    {{ form_start(form, {'action' : path('admin_user_edit', {'id' : user.id})}) }}
        <div class="row">
            <div class="col">
                {{ form_row(form.username) }}
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ form_row(form.email) }}
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ form_row(form.roles) }}
            </div>
        </div>
        <button type="submit" class="btn btn-success btn-sm pull-right">Modifier</button>
    {{ form_end(form) }}
{% endblock %}
