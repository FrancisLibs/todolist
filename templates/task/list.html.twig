{% extends 'base.html.twig' %}

{% block header_img %}<img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">{% endblock %}

{% block body %}
    <div class="ligne">
        <a href="{{ path('task_create') }}" class="btn btn-info pull-right">Créer une tâche</a>
    </div>
    <div class="row">
        {% for task in tasks %}
            <div class="col-sm-4 col-lg-4 col-md-4 taskstyle">
                <h4 class="tasktitle"><a href="{{ path('task_edit', {'id' : task.id }) }}">{{ task.title }}</a></h4>
                <div class="thumbnail">
                    <div class="caption">
                        <h4 class="pull-right">
                            {% if task.isDone %}
                                <span class="glyphicon glyphicon-ok">
                            {% else %}
                                <span class="glyphicon glyphicon-remove">
                            {% endif %}
                        </h4>
                        <h5 class="taskUsername">
                            Autheur : {{ task.user.username }}
                            {% if task.done %}
                                {{ task.done }}
                            {% else %}
                                0
                            {% endif %}
                        </h5>
                        <p>{{ task.content }}</p>
                    </div>
                    <div>
                        <form action="{{ path('task_toggle', {'id' : task.id }) }}">
                            <button class="btn btn-success btn-sm pull-right taskbutton">
                                {% if not task.isDone %}
                                    Marquer comme faite
                                {% else %}
                                    Marquer non terminée
                                {% endif %}
                            </button>
                        </form>
                        <form action="{{ path('task_delete', {'id' : task.id }) }}">
                            <button class="btn btn-danger btn-sm pull-right taskbutton">Supprimer</button>
                        </form>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="alert alert-warning" role="alert">
                Il n'y a pas encore de tâche enregistrée.
            </div>
        {% endfor %}
    </div>
{% endblock %}
